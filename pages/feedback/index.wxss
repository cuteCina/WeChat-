page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  margin-top: 15rpx;
}
.fb_main .fb_tips .fb_tips_list {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  margin: 10rpx;
  background-color: #fff;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 15rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
}
.fb_main .fb_content .fb_tool button {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  color: #ccc;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 30%;
  margin: 0;
}
